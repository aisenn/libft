#include "libft.h"

char	*ft_strtrim(char const *s)
{
	char *str;
	int len;

	if (s)
	{
		len = 0;
		while (*s == ' ' || *s == '\n' || *s == '\t')
			s++;
		while (s[len] != '\0')
			len++;
		while ((s[len - 1] == ' ' || s[len - 1] == '\n' || s[len - 1] == '\t') && *s)
			len--;
		str = (char *)malloc(sizeof(char) * (len + 1));
		if (str == 0)
			return (NULL);
		str[len--] = '\0';
		while (len + 1 > 0)
		{
			str[len] = s[len];
			len--;
		}
		return (str);
	}
	return (NULL);
}